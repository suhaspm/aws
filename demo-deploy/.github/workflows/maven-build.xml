name: JAVA CI with Maven
on:
    push:
        branches: ["main"]
    pull_request:
        branches: ["main"]

jobs:
    build:
        runs-on: ubuntu-latest

        steps.
            - name: Checkout code
              uses: actions/checkout@v4

            - name: Set up JAVA
              uses: actions/setup-java@v4
              with:
                distribution: 'temurin'
                java-version: '21'

            - name: Build with Maven
              run: mvn clean package -DskipTests